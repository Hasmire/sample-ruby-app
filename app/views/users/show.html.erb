<% content_for :title, "Profile" %>
<% content_for :page_title, "Profile" %>

<div class="boxed">
  <div>
    <h1 class="text-lg font-semibold mb-1">Profile Information</h1>
    <p class="text-muted-foreground">
      This is where you can view and update your profile information.
    </p>
  </div>
  <div class="grid grid-cols-2 gap-4">
    <div class="flex flex-col gap-2">
      <p class="font-semibold">Avatar:</p>
      <% if @user.avatar.attached? %>
        <%= image_tag @user.avatar, alt: "Avatar Image", class: "size-24 rounded-full text-center object-cover" %>
      <% else %>
        <%= image_tag "default_avatar.jpg", alt: "Avatar Image", class: "size-24 rounded-full text-center object-cover" %>
      <% end %>
    </div>
    <div class="flex flex-col gap-2">
      <p class="font-semibold">Bio:</p>
      <p>
        <%= current_user.bio %>
      </p>
    </div>
    <div class="flex flex-col gap-2">
      <p class="font-semibold">Username:</p>
      <p><%= current_user.username %></p>
    </div>
  </div>
  <div>
    <%= render_button "Edit profile details", as: :link, href: "/profile/edit" %>
  </div>
</div>

<div class="boxed">
  <div>
    <h1 class="text-lg font-semibold mb-1">Account Crendentials</h1>
    <p class="text-muted-foreground">
      This is where you can view and update your account credentials.
    </p>
  </div>
  <div class="grid grid-cols-2 gap-4">
    <div class="flex flex-col gap-2">
      <p class="font-semibold">Email:</p>
      <p><%= current_user.email %></p>
    </div>
    <div class="flex flex-col gap-2">
      <p class="font-semibold">Password:</p>
      <p>********</p>
    </div>
  </div>
  <div>
    <%= render_button "Edit account credentials", as: :link, href: "/profile/edit_credentials" %>
  </div>
</div>